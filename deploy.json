{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUserName": {
            "metadata": {
                "description": "User Name for network devices"
            },
            "type": "string"
        },
        "adminPasswordOrKey": {
            "metadata": {
                "description": "Password or SSH public key to login to the Virtual Machine. Note: There are a number of special characters that you should avoid using for F5 product user accounts.  See [K2873](https://support.f5.com/csp/article/K2873) for details. Note: If using key-based authentication, this should be the public key as a string, typically starting with **---- BEGIN SSH2 PUBLIC KEY ----** and ending with **---- END SSH2 PUBLIC KEY ----**."
            },
            "type": "securestring"
        },
        "dnsLabel": {
            "metadata": {
                "description": "Unique DNS Name for the Public IP address used to access the Virtual Machine."
            },
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
                    {
                        "type": "Microsoft.Resources/deployments",
                        "apiVersion": "2018-05-01",
                        "name": "salinkedTemplate",
                        "properties": {
                            "mode": "Incremental",
                            "templateLink": {
                                "uri":"https://raw.githubusercontent.com/mikeoleary/azure-f5-palo/master/templates/storageaccount/azureDeploy.json",
                                "contentVersion":"1.0.0.0"
                            },
                            "parameters": {
                                "StorageAccountName": {
                                    "value": "[parameters('dnsLabel')]"
                                },
                                "sourceStorageURL": {
                                    "value": "https://molearyfiles.blob.core.windows.net/paloaltobootstrapfiles"
                                }
                            }
                        }
                    },
                    {
                        "type": "Microsoft.Resources/deployments",
                        "apiVersion": "2018-05-01",
                        "name": "f5linkedTemplate",
                        "properties": {
                            "mode": "Incremental",
                            "templateLink": {
                                "uri":"https://raw.githubusercontent.com/mikeoleary/azure-f5-palo/master/templates/f5/azuredeploy.json",
                                "contentVersion":"7.2.0.0"
                            },
                            "parameters": {
                                "adminUsername": {
                                    "value": "[parameters('adminUserName')]"
                                },
                                "adminPasswordOrKey":{
                                    "value": "[parameters('adminPasswordOrKey')]"
                                    },
                                "dnsLabel": {
                                    "value": "[parameters('dnsLabel')]"
                                },
                                "declarationUrl": {
                                    "value": "https://raw.githubusercontent.com/mikeoleary/azure-f5-palo/master/templates/f5/baseline.json"
                                }                                
                            }
                        }
                    },
                    {
                        "type": "Microsoft.Resources/deployments",
                        "apiVersion": "2018-05-01",
                        "name": "palinkedTemplate",
                        "properties": {
                            "mode": "Incremental",
                            "templateLink": {
                                "uri":"https://raw.githubusercontent.com/mikeoleary/azure-f5-palo/master/templates/paloalto/azureDeploy.json",
                                "contentVersion":"1.0.0.0"
                            },
                            "parameters": {
                                "adminPassword":{
                                    "value": "[parameters('adminPasswordOrKey')]"
                                },
                                "adminUserName": {
                                    "value": "[parameters('adminUserName')]"
                                },
                                "dnsNameForPublicIP": {
                                    "value": "[concat(parameters('dnsLabel'),'-palo1')]"
                                },
                                "dnsNameForPublicIP2": {
                                    "value": "[concat(parameters('dnsLabel'),'-palo2')]"
                                },
                                "vmName": {
                                    "value": "pavm1"
                                },
                                "vmName2": {
                                    "value": "pavm2"
                                },
                                "imageVersion": {
                                    "value": "latest"
                                },
                                "imageSku": {
                                    "value": "bundle2"
                                },
                                "subnet0id" : {
                                    "value": "[reference('f5linkedTemplate').outputs.mgmtSubnetId.value]"
                                },
                                "subnet1id" : {
                                    "value": "[reference('f5linkedTemplate').outputs.untrustSubnetId.value]"
                                },
                                "subnet2id" : {
                                    "value": "[reference('f5linkedTemplate').outputs.trustSubnetId.value]"
                                },
                                "subnet3id" : {
                                    "value": "[reference('f5linkedTemplate').outputs.haSubnetId.value]"
                                },
                                "storageAccountName" : {
                                    "value": "[reference('salinkedTemplate').outputs.storageAccountName.value]"
                                },
                                "StorageAccountKey" : {
                                    "value": "[reference('salinkedTemplate').outputs.StorageAccountKey.value]"
                                },
                                "lbpublicIPId": {
                                    "value": "[reference('salinkedTemplate').outputs.lbpublicIPId.value]"
                                }
                            }
                        }
                    },
                    {
                        "type": "Microsoft.Resources/deployments",
                        "apiVersion": "2018-05-01",
                        "name": "applinkedTemplate",
                        "properties": {
                            "mode": "Incremental",
                            "templateLink": {
                                "uri":"https://raw.githubusercontent.com/mikeoleary/azure-f5-palo/master/templates/appserver/azuredeploy.json",
                                "contentVersion":"1.0.0.0"
                            },
                            "parameters": {
                                "adminUsername": {
                                    "value": "[parameters('adminUsername')]"
                                },
                                "adminPasswordOrKey": {
                                    "value": "[parameters('adminPasswordOrKey')]"
                                },
                                "subnetId": {
                                    "value": "[reference('f5linkedTemplate').outputs.appSubnet1Id.value]"
                                },
                                "privateIPAddress": {
                                    "value": "[reference('f5linkedTemplate').outputs.appServer1IP.value]"
                                }
                            }
                        }
                    },
                                        {
                        "type": "Microsoft.Resources/deployments",
                        "apiVersion": "2018-05-01",
                        "name": "routeslinkedTemplate",
                        "dependsOn": [
                            "palinkedTemplate",
                            "f5linkedTemplate",
                            "applinkedTemplate"
                        ],
                        "properties": {
                            "mode": "Incremental",
                            "templateLink": {
                                "uri":"https://raw.githubusercontent.com/mikeoleary/azure-f5-palo/master/templates/routes/azureDeploy.json",
                                "contentVersion":"1.0.0.0"
                            },
                            "parameters": {
                                "virtualnetworkName": {
                                    "value": "[reference('f5linkedTemplate').outputs.virtualnetworkName.value]"
                                },
                                "extSubnetName": {
                                    "value": "[reference('f5linkedTemplate').outputs.extSubnetName.value]"
                                },
                                "extSubnetPrefix": {
                                    "value": "[reference('f5linkedTemplate').outputs.extSubnetPrefix.value]"
                                },
                                "extNsgId": {
                                    "value": "[reference('f5linkedTemplate').outputs.extNsgId.value]"
                                },
                                "routeTableExternalId": {
                                    "value": "[reference('f5linkedTemplate').outputs.routeTableExternalId.value]"
                                }
                            }
                        }
                    }
                ],
    "outputs": {
        "appUrl": {
            "type": "string",
            "value": "[reference('salinkedTemplate').outputs.appUrl.value]"
            },      
        "fw1mgmtIP": {
            "type": "string",
            "value": "[reference('palinkedTemplate').outputs.fw1mgmtIP.value]"
            },
        "fw2mgmtIP": {
            "type": "string",
            "value": "[reference('palinkedTemplate').outputs.fw2mgmtIP.value]"
            },
        "bigip1mgmtIP": {
            "type": "string",
            "value": "[reference('f5linkedTemplate').outputs.bigip1mgmtIP.value]"
        },
        "bigip2mgmtIP": {
            "type": "string",
            "value": "[reference('f5linkedTemplate').outputs.bigip2mgmtIP.value]"
        }
    }
}