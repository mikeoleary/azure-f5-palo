{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string",
            "metadata": {
                "description": "USER ASSIGNED IDENTITY NAME"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "storageAccountName"
            }
        },
        "storageAccountKey": {
            "type": "string",
            "metadata": {
                "description": "storageAccountKey"
            }
        }
    },
    "variables": {
        "storageAccountNameUnique": "[concat(parameters('resourceName'), '-uami-', take(uniqueString(resourceGroup().id),5)) ]"
    },
    "resources": [
        {
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "name": "[variables('storageAccountNameUnique') ]",
            "apiVersion": "2018-11-30",
            "location": "[resourceGroup().location]"
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[guid(resourceGroup().id)]",
            "dependsOn": [
                "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('storageAccountNameUnique') )]"
            ],
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                "principalId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('storageAccountNameUnique') )]"
            }
        }
    ],
    "outputs": {
        "identityName": {
            "type": "string",
            "value": "[reference(variables('storageAccountNameUnique')).Name]"
        },
        "identityId": {
            "type": "string",
            "value": "[reference(variables('storageAccountNameUnique')).Id]"
        }
    }
}