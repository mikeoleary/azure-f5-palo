{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string",
            "metadata": {
                "description": "USER ASSIGNED IDENTITY NAME"
            }
        }
    },
    "variables": {
        "resourceNameUnique": "[concat(parameters('resourceName'), '-uami-', take(uniqueString(resourceGroup().id),5)) ]"
    },
    "resources": [
        {
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "name": "[variables('resourceNameUnique') ]",
            "apiVersion": "2018-11-30",
            "location": "[resourceGroup().location]"
        }
 //       {
 //           "type": "Microsoft.Authorization/roleAssignments",
 //           "apiVersion": "2018-09-01-preview",
 //           "name": "[guid(resourceGroup().id)]",
 //           "dependsOn": [
 //               "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('resourceNameUnique') )]"
 //           ],
 //           "properties": {
 //               "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
 //               "principalId": "[reference(concat('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('resourceNameUnique')), '2018-11-30').principalId]"
 //           }
 //       }
    ],
    "outputs": {
        "identityName": {
            "type": "string",
            "value": "[variables('resourceNameUnique')]"
        },
        "identityId": {
            "type": "string",
            "value": "[reference(variables('resourceNameUnique')).principalId]"
        }
    }
}