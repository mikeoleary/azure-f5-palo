{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName":{
             "type": "string",
            "metadata": {
                "description": "Name of the existing Vnet"
            }           
        },
        "appSubnet1Name": {
            "type": "string",
            "metadata": {
                "description": "Name of the app subnet"
            }
        },
        "appSubnet1Prefix": {
            "type": "string",
            "metadata": {
                "description": "IP range of app 1 subnet"
            }
        },
        "routeTableAppSubnet1Id": {
            "type": "string",
            "metadata": {
                "description": "ID of app subnet 1 route table"
            }
        },
        "extSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the ext subnet"
            }
        },
        "extSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "IP range of ext subnet"
            }
        },
        "extNsgId": {
            "type": "string",
            "metadata": {
                "description": "ID of Network Security Group"
            }
        },
        "routeTableExternalId": {
            "type": "string",
            "metadata": {
                "description": "ID of ext route table"
            }
        }
    },
    "variables": {
        "networkApiVersion": "2017-11-01"
    },
    "resources": [
        {
            "name": "[concat(parameters('virtualNetworkName'), '/', parameters('extSubnetName'))]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "[variables('networkApiVersion')]",
            "properties": {
                "addressPrefix": "[parameters('extSubnetPrefix')]",
                "networkSecurityGroup": {
                    "id": "[parameters('extNsgId')]"
                },
                "routeTable": {
                    "id": "[parameters('routeTableExternalId')]"
                }
            }
        },
                {
            "name": "[concat(parameters('virtualNetworkName'), '/', parameters('appSubnet1Name'))]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "[variables('networkApiVersion')]",
            "properties": {
                "addressPrefix": "[parameters('appSubnet1Prefix')]",
                "routeTable": {
                    "id": "[parameters('routeTableAppSubnet1Id')]"
                }
            }
        }
    ]
}